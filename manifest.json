{

  "manifest_version": 2,
  "name": "MMTool",
  "version": "0.1",

  "description": "Implements workflow for wiki based notes making",
  "icons": {
	"96": "icons/logo_mm_96.ico",
    "48": "icons/logo_mm_48.ico"
	
  },
  
	"permissions": [
		"*://ru.wikiversity.org/*",
		"notifications",
		"activeTab",
		"contextMenus",
		"menus",
		"menus.overrideContext"
	],
	
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://*.wikipedia.org https://ru.wikiversity.org; object-src 'self' https://*.wikipedia.org",
  
  "browser_action": {
    "default_icon": "icons/logo_mm_32.ico",
    "default_title": "MMTool",
    "default_popup": "popup/turn_on_turn_off.html"
  },
  
	"background":{
		"page": "bgscripts/bgpage.html"
	},
	
	"content_scripts": [{
		"matches":["https://ru.wikiversity.org/*"],
		"js":["cscripts/selectioneer.js"]
	}],
  
	"commands": {
		"toggleCreateOrAddCard": {
			"suggested_key": {
				"default": "Alt+M"
			}
		},
		"finishCurrentCard": {
			"suggested_key": {
				"default": "Alt+Shift+M"
			}
		},
		"startCreatingCard": {
			"suggested_key": {
				"default": "Alt+V"
			}
		}
	}
  
  
}